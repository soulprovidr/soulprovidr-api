{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../public/**/*",
        "outDir": "dist/public",
        "watchAssets": true
      }
    ],
    "builder": "swc",
    "deleteOutDir": true,
    "typeCheck": true
  }
}
